---
import "../../public/global.css";
import { UsernameForm } from "../components/forms/username";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="stylesheet" href="/global.css" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>SPC Wallet</title>
		<script>
			import { pageInIframe } from "@/lib/utils";

			if (pageInIframe())
				document.getElementById("heading")!.style.display = "none";
			else {
				const credId = window.localStorage.get("credId");
				const credentialIdElement = document.getElementById("credential-id");

				if (credentialIdElement) credentialIdElement.innerText = credId;
			}
		</script>
	</head>
	<body class="flex flex-col items-center justify-center h-screen">
		<h1 id="heading">SPC Wallet</h1>
		<strong id="credential-id"></strong>

		<UsernameForm client:only />
	</body>
	<script>
		import { pageInIframe, getPaymentOrigin, sendMessage } from "@/lib/utils";
		const paymentOrigin = getPaymentOrigin();

		if (pageInIframe()) {
			window.addEventListener("message", (e) => {
				if (e.origin !== paymentOrigin) {
					return;
				}

				if (e.data.type === "credentials.get") {
					console.log("recieved credentials.get message", e.data.message);
					const credential = window.localStorage.get("credId");
					console.log("sending available credentials", credential);
					sendMessage({
						type: "credentials.get",
						availableCredentials: [credential],
					});
				}

				if (e.data.paid !== undefined) {
					alert(
						`Payment ${e.data.paid ? "succeeded" : "failed"}. Credential ${e.data.registered ? "registered" : "not registered"}`,
					);
					location.href = "/success";
				} else {
					console.log("recieved message", e.data.message);
				}
			});
		}
	</script>
</html>
